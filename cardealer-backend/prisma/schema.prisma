generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  isSuperUser Boolean @default(false)
  watchlist Watchlist?
}

model Watchlist {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userID], references: [id])
  userID Int @unique
  cars CarsOnLot[]

}

model Make {
  id Int @default(autoincrement())
  name String @id
  description String
  models Model[]
  cars_on_lot CarsOnLot[]
}

model Model {
  id Int @default(autoincrement())
  name String @id
  make  Make? @relation(fields: [makeName], references: [name])
  makeName String?
  cars_on_lot CarsOnLot[]
}

model CarsOnLot {
  id Int @id @default(autoincrement())
  headline String
  description String
  image String
  year Int
  miles Int
  drivetrain String
  engine String
  color String
  MPG_city Int
  MPG_highway Int
  make Make? @relation(fields: [makeName], references: [name])
  makeName String?
  model Model? @relation(fields: [modelName], references: [name])
  modelName String?
  features String[]

  price Int
  watchlists Watchlist? @relation(fields: [watchlistID], references: [id])
  watchlistID Int?
}
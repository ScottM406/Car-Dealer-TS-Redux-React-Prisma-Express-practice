generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  watchlist CarsOnLot[]
}

model Make {
  id Int @id @default(autoincrement())
  name String
  description String
  models Model[]
}

model Model {
  id Int @id @default(autoincrement())
  name String
  factoryIncentive Boolean @default(false)
  make  Make @relation(fields: [makeId], references: [id])
  makeId Int
  cars_on_lot CarsOnLot[]
}
model CarsOnLot {
  id Int @id @default(autoincrement())
  headline String
  description String
  image String
  year Int
  miles Int
  drivetrain String
  engine String
  color String
  MPG_city Int
  MPG_highway Int
  model Model @relation(fields: [modelId], references: [id])
  modelId Int
  features String[]

  price Int
  watchlists User? @relation(fields: [userId], references: [id])
  userId Int?
}